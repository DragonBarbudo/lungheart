          //input(type="hidden" name="_from" ng-model="email")
          input(type="hidden" name="_subject" value="Cita agendada")
          input(type="text" name="Nombre del paciente" placeholder="Nombre" required).fluid
          .container
            .c.cm12: input(type="mail" name="_from" placeholder="Correo electrónico" required).fluid
            .c.cm12: input(type="text" name="Telefono" placeholder="Número telefónico").fluid
          
          .container
            .c.cm12: datepicker(date-format="MMMM d, y", date-typer="true"): input(type="text" ng-model="fecha" name="Fecha" placeholder="Fecha" required).fluid
            .c.cm12: input(type="text" name="Preferencia" placeholder="Preferencia de horario").fluid
          input(type="text" name="Asunto" placeholder="Asunto de su cita" required).fluid
          .container
            .c(ng-show="sent")
              .note La solicitud de cita ha sido enviada. <br>Le confirmaremos la fecha de su cita y los horarios disponibles a su dirección de correo electrónico.
            .c.tar(ng-hide="sent")
              button(type="submit").link
                .icon.small: .fa.fa-angle-right
                .text Agendar cita
      
