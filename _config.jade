//Mixins

mixin linkTo(text, link)
  a(href="#{link}", du-smooth-scroll).link
    .icon.small: .fa.fa-angle-right
    .text !{text}


mixin card(bgimg, dr, especialidad)
  a.card(href="#", style="background-image: url(#{bgimg})").c4.g
    .container.bottom.center
      .c12
        h3 #{dr}
        hr
        p #{especialidad}
